<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/home_apps_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        tools:visibility="visible">

        <TextClock
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:format12Hour="hh:mm"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            tools:text="02:34" />

        <TextClock
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:format12Hour="EEEE, dd MMM"
            android:format24Hour="EEEE, dd MMM"
            android:paddingHorizontal="2dp"
            android:textColor="@android:color/white"
            tools:text="Thu, 30 Dec" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/home_app_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="App"
            android:lines="1"
            android:maxLines="1"
            android:minWidth="100dp"
            android:paddingVertical="10dp"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:tag="1"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/home_app_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="App"
            android:lines="1"
            android:maxLines="1"
            android:minWidth="100dp"
            android:paddingVertical="10dp"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:tag="2"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/home_app_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="App"
            android:lines="1"
            android:maxLines="1"
            android:minWidth="100dp"
            android:paddingVertical="10dp"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:tag="3"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/home_app_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="App"
            android:lines="1"
            android:maxLines="1"
            android:minWidth="100dp"
            android:paddingVertical="10dp"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:tag="4"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/home_app_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="App"
            android:lines="1"
            android:maxLines="1"
            android:minWidth="100dp"
            android:paddingVertical="10dp"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:tag="5"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/home_app_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-light"
            android:hint="App"
            android:lines="1"
            android:maxLines="1"
            android:minWidth="100dp"
            android:paddingVertical="10dp"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:tag="6"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/set_as_default_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:padding="8dp"
            android:text="Set Ultra as default launcher"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone"
            tools:ignore="HardcodedText"
            tools:visibility="visible" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/app_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-light"
            android:imeOptions="actionNone"
            android:inputType="text"
            android:lines="1"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingVertical="4dp"
            android:shadowColor="#40000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="26sp"
            tools:ignore="HardcodedText" />

        <ListView
            android:id="@+id/app_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:clipToPadding="false"
            android:divider="@null"
            android:overScrollMode="never"
            android:paddingBottom="48dp" />

    </FrameLayout>

</FrameLayout>